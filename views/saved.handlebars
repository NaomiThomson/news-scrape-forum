<main class="container">

  {{#each doc}}

  <div class="row">
    <div class="col s12 m12">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{this.title}}</span>
          <a class="btn-floating btn-large waves-effect waves-light orange delete-article"><i class="material-icons">delete</i></a>
          <a class="btn-floating btn-large waves-effect waves-light orange edit-note modal-trigger" href="#{{this._id}}"><i class="material-icons">mode_edit</i></a>
        </div>
        <div class="card-action">
          <a data-id={{this._id}} href="{{this.link}}">{{this.link}}</a>
        </div>
      </div>
    </div>
  </div>


<!-- Modal Structure -->
<div id="{{this._id}}" class="modal">
  <div class="modal-content">
    <h4>New Note</h4>

    <div class="row">
       <div class="input-field col s12">
          <textarea id="title-input" type="text" class="materialize-textarea"></textarea>
          <label for="title-input">Title</label>
        </div>
    </div>

      <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <textarea id="body-input" class="materialize-textarea"></textarea>
          <label for="body-input">Body</label>
        </div>
      </div>
    </form>
  </div>
  </div>
  <div class="modal-footer">
    <a href="#{{this._id}}" data-id="{{this._id}}" class=" modal-action modal-close waves-effect waves-green btn-flat" id="save-note">Save Note</a>
  </div>
</div>


  {{/each}}

</main>